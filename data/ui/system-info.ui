<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- System Information Component -->
  <!-- Note: system-info.ts creates UI dynamically and doesn't load this file.
       This UI definition matches the structure created in code for reference. -->
  <object class="GtkBox" id="system_info_container">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <child>
      <object class="GtkLabel" id="system_info_title">
        <property name="label" translatable="yes">System Information</property>
        <property name="halign">start</property>
        <style>
          <class name="title-1"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="system_info_scrolled">
        <property name="vexpand">true</property>
        <property name="hexpand">true</property>
        <child>
          <object class="GtkListBox" id="system_info_list">
            <property name="selection-mode">none</property>
            <style>
              <class name="boxed-list"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
